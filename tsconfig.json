{
  "compilerOptions": {
    "target": "es5",                                     
    "module": "commonjs",                                                                                                
    "outDir": "./dist",
    "strict": true,                                      
    "strictPropertyInitialization": false,            
    "allowJs": true,                    
    "baseUrl": "./src",   
    "paths": {
      "@modules/*":["modules/*"],
      "@config/*":["config/*"],
      "@shared/*":["shared/*"]
    },                                      
    "esModuleInterop": true,                             
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,                   
    "forceConsistentCasingInFileNames": true,            
    "strictNullChecks": false,                         
    "skipLibCheck": true                                 
  }
}
